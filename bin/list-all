#!/usr/bin/env bash
set -Eeuo pipefail

DEBUG="${DEBUG:-}"
GITHUB_API_TOKEN="${GITHUB_API_TOKEN:-}"

if [ -n "${DEBUG}" ]; then
  set -x
fi

fail() {
  echo -e "asdf-$TOOL_NAME: $*"
  exit 1
}

curl_opts=(-fsSL)

releases_path=https://api.github.com/repos/kubernetes/kubernetes/releases
curl_cmd="$(command -vp curl)"
cmd="${curl_cmd} -fsS"
if [ -n "$GITHUB_API_TOKEN" ]; then
  cmd="$cmd -H 'Authorization: token $GITHUB_API_TOKEN'"
fi

# stolen from https://github.com/rbenv/ruby-build/pull/631/files#diff-fdcfb8a18714b33b07529b7d02b54f1dR942
sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' | \
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

# Fetch all tag names, and get only second column. Then remove all unnecesary characters.
raw_versions="$(eval $cmd $releases_path)"
greped_versions=$(echo "${raw_versions}" | grep -oE "tag_name\": *\".{1,15}\",")
unsorted_versions=$(echo "${greped_versions}" | sed 's/tag_name\": *\"v//;s/\",//')
versions=$(echo "$unsorted_versions" | sort_versions)
stable_version="$($cmd https://storage.googleapis.com/kubernetes-release/release/stable.txt | tr -d v)"
printf "stable(${stable_version}) "
echo $versions

if [ ! -z "${DEBUG}" ]; then
  set +x
fi
